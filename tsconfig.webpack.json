{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "strictNullChecks": false,
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@angular/*": ["../node_modules/@angular/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "hammerjs",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.e2e.ts",

    //Unused files:
    "src/app/UberReaderClient/UberReaderComponents/Controls/LoginControl.ts",
    "src/app/UberReaderClient/UberReaderComponents/UtilComponents/MenuComponent/MenuList.ts",
    "src/app/UberReaderClient/UberReaderComponents/UtilComponents/MenuComponent/MenuItemRenderer.ts",
    "src/app/UberReaderClient/UberReaderComponents/SharedModules/shared-components-module/pipes/possessive-filter.pipe.ts",
    "src/app/UberReaderClient/UberReaderComponents/SharedModules/shared-components-module/pipes/max.pipe.ts",
    "src/app/UberReaderClient/UberReaderComponents/SharedModules/shared-components-module/pipes/FormatDatePipe.ts",
    "src/app/UberReaderClient/UberReaderComponents/SharedModules/shared-components-module/pipes/default.pipe.ts",
    "src/app/UberReaderClient/UberReaderComponents/SharedModules/shared-components-module/components/DialogManager.ts",
    "src/app/UberReaderClient/UberReaderComponents/Dialogs/LazyDialog.ts",
    "src/app/UberReaderClient/UberReaderComponents/Dialogs/ImageCropDialog.ts",
    "src/app/UberReaderClient/UberReaderComponents/Dialogs/CourseStepPreviewDialog.ts",
    "src/app/UberReaderClient/UberReaderComponents/Dialogs/AlertDialog.ts",
    "src/app/UberReaderClient/UberReaderComponents/Dialogs/AlertCheckBoxDialog.ts",
    "src/app/UberReaderClient/UberReaderComponents/SharedModules/shared-components-module/pipes/SafeHtmlPipe.ts",
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit": true,
    "enableIvy": false
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
